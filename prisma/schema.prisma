model HeistItem {
  id              Int      @id @default(autoincrement())
  name            String   @unique
  type            HeistItemType
  description     String
  coinCost        Int
  effectType      HeistItemEffectType
  effectValue     Float
  durationHours   Int?
  maxUses         Int?
  isActive        Boolean  @default(true)
  icon            String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
