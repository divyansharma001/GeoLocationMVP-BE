  heist           Heist    @relation(fields: [heistId], references: [id], onDelete: Cascade)
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  item            HeistItem @relation(fields: [itemId], references: [id], onDelete: Cascade)

  @@index([heistId])
  @@index([userId])
  @@index([itemId])
}

